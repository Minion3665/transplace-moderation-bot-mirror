{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@database/*": ["database/*"],
      "@interactionHandling/*": ["interactionHandling/*"],
      "@resources/*": ["resources/*"],
      "@utils.js": ["utils.js"],
    }
  },
}
